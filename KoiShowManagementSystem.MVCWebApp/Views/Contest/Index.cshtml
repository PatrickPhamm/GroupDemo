@model IEnumerable<KoiShowManagementSystem.MVCWebApp.Models.Contest>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-10">
        <h3 class="display-8">Contest List</h3>
    </div>
    <div class="col-md-2 text-end">
        <button type="button" class="btn btn-primary" onclick="add();">
            Add
        </button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="card-header">
                    <th class="card-title text-center">ContestId</th>
                    <th class="card-title text-center">Name</th>
                    <th class="card-title text-center">Description</th>
                    <th class="card-title text-center">StartDate</th>
                    <th class="card-title text-center">EndDate</th>
                    <th class="card-title text-center">Location</th>
                    <th class="card-title text-center">Status</th>
                    <th class="card-title text-center">KoiId</th>
                    <th class="card-title text-center">ContestType</th>
                    <th class="card-title text-center">PrizePool</th>
                </tr>
            </thead>
            <tbody class="tblContest">
            </tbody>
        </table>
    </div>
</div>

<div class="modal" id="contestModal" tabindex="-1" aria-labelledby="contestModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frm", id = "frm" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="contestModalLabel">Contest</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label for="1">ContestId</label>
                            <input type="hidden" id="ContestId" />
                            <input type="number" id="contestId" name="contestId" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label for="1">Name</label>
                            <input type="text" id="name" name="name" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label for="1">Description</label>
                            <input type="text" id="description" name="description" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label for="1">StartDate</label>
                            <input type="date" id="startDate" name="startDate" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label for="1">EndDate</label>
                            <input type="date" id="endDate" name="endDate" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label for="1">Location</label>
                            <input type="text" id="location" name="location" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label for="1">KoiId</label>
                            <input type="number" id="koiId" name="koiId" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label for="1">ContestType</label>
                            <input type="text" id="contestType" name="contestType" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label for="1">PrizePool</label>
                            <input type="text" id="prizePool" name="prizePool" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btSave" type="button" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            loadData();
            $("#btSave").click(function () {
                $.ajax({
                    type: 'POST',
                    url: 'https://localhost:7286/api/Contest',
                    headers: {
                        'Accept': 'text/plain',
                        'Content-Type': 'contest/json; charset=utf-8'
                    },
                    data: JSON.stringify({
                        contestId: 0,
                        name: $("#name").val(),
                        cost: $("#cost").val(),
                        description: $("#description").val(),
                        startDate: $("#startDate").val(),
                        endDate: $("#endDate").val(),
                        location: $("#location").val(),
                        status: $("#status").val(),
                        koiId: $("#koiId").val(),
                        contestType: $("#contestType").val(),
                        prizePool: $("#prizePool").val(),
                    })
                    ,
                    success: function (result) {
                        if (result.status >= 1) {
                            $('#contestModal').modal('hide');
                            loadData();
                        }
                        alert(result.message);
                    },
                    error: function (xhr, error) {
                        alert(xhr.responseText);
                        console.log(xhr);
                    }
                });
            })
        });

        function loadData() {
            alert("Load data progressing ...");
            $.ajax({
                url: 'https://localhost:7286/api/Contest',
                type: "GET",
                contentType: "contest/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    alert('Server response: ' + result.message)
                    var html = '';
                    $.each(result.data, function (key, item) {
                        //console.log(item);
                        html += '<tr>';
                        html += '<td>' + item.contestId + '</td>';
                        html += '<td>' + item.name + '</td>';
                        html += '<td>' + item.description + '</td>';
                        html += '<td>' + item.startDate + '</td>';
                        html += '<td>' + item.endDate + '</td>';
                        html += '<td>' + item.location + '</td>';
                        html += '<td>' + item.status + '</td>';
                        html += '<td>' + item.koiId + '</td>';
                        html += '<td>' + item.contestType + '</td>';
                        html += '<td>' + item.prizePool + '</td>';
                        html += '</tr>';
                    });
                    $('.tblContest').html(html);
                },
                error: function (xhr, error) {
                    alert(xhr.statusText);
                }
            });
        }
        function add() {
            //alert("Save function");
            $("contestModalLabel").html("Add New");
            $('#contestModal').modal('show');
        }
    </script>
}